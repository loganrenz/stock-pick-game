{
  "name": "@stock-pick-game/backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "cross-env NODE_ENV=development tsx src/lib/migrate.ts",
    "db:reset": "tsx src/lib/reset-db.ts",
    "db:seed": "tsx src/lib/seed.ts",
    "format": "prettier --write \"src/**/*.{js,ts,vue,css,json,md}\""
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.6.1",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.19.1",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.2.2",
    "vitest": "^3.2.3"
  }
}

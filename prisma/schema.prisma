generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String?
  jwtToken  String?   @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  picks     Pick[]
  wins      Week[]    @relation("Winner")
}

model Week {
  id        Int       @id @default(autoincrement())
  weekNum   Int
  startDate DateTime  @unique
  endDate   DateTime?
  winnerId  Int?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  picks     Pick[]
  winner    User?     @relation("Winner", fields: [winnerId], references: [id])
}

model Pick {
  id               Int       @id @default(autoincrement())
  userId           Int
  weekId           Int
  symbol           String
  entryPrice       Float
  createdAt        DateTime  @default(now())
  updatedAt        DateTime? @updatedAt
  dailyPriceData   String?
  currentValue     Float?
  weekReturn       Float?
  returnPercentage Float?
  week             Week      @relation(fields: [weekId], references: [id])
  user             User      @relation(fields: [userId], references: [id])

  @@unique([userId, weekId])
}

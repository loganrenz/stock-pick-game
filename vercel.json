    "ALPHA_VANTAGE_API_KEY": "J135CCG2DDOQOM6D",
    "NODE_ENV": "development"
  },
  "crons": [
    {
      "path": "/api/cron?job=update-stock-prices",
      "schedule": "*/15 * * * *"
    }
  ]
}

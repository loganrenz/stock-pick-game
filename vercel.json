{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "tsc",
        "outputDirectory": ".vercel/output/functions",
        "includeFiles": ["api/**/*.ts"]
      }

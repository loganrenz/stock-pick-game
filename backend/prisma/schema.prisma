generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/data/dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String?
  jwtToken  String?  @unique
  picks     Pick[]
  wins      Week[]   @relation("Winner")
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model Week {
  id        Int      @id @default(autoincrement())
  weekNum   Int
  startDate DateTime
  endDate   DateTime?
  winnerId  Int?
  picks     Pick[]
  winner    User?    @relation("Winner", fields: [winnerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model Pick {
  id            Int      @id @default(autoincrement())
  userId        Int
  weekId        Int
  symbol        String
  priceAtPick   Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime? @updatedAt
  dailyPrices   String?  // Store daily prices as JSON string
  currentPrice  Float?
  totalReturn   Float?
  weekReturn    Float?
  weekReturnPct Float?
  user          User     @relation(fields: [userId], references: [id])
  week          Week     @relation(fields: [weekId], references: [id])
}

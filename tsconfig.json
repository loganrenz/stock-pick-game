{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./api/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.api.json"
    }
  ],
  "exclude": ["node_modules", ".vercel", "dist", "**/*.d.ts"]
}
